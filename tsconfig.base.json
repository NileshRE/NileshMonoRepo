{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["DOM", "es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@mylib/hooks": ["./libs/hooks/src/index.ts"],
      "@mylib/schemas": ["./libs/schemas/src/index.ts"],
      "@mylib/ui": ["./libs/ui/src/index.ts"],
      "@mylib/utils": ["./libs/hooks/src/index.ts"]
    }
  }
}
